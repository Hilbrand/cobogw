<project name="cobogw" default="all" basedir=".">
  <description>
    cobogw build file. This ant build file creates 2 jar files, the 
    org.cobogw.gwt.jar file to use for the client, and the 
    org.cobogw.gwt.server.jar to deploy on the server. 
    
    To run set the environment variable GWT_HOME to the home directory of your
    GWT libraries, e.g. gwt-user.jar.
  </description>
  <property name="version.num" value="0.1" />

  <!-- set classpath -->
  <path id="project.class.path">
    <pathelement path="${java.class.path}/"/>
    <pathelement path="${GWT_HOME}/gwt-user.jar"/>
  </path>

  <target name="compile" description="Compile src to bin">
    <mkdir dir="bin"/>
    <javac srcdir="src:test" destdir="bin" includes="**" source="1.4">
      <classpath refid="project.class.path"/>
    </javac>
  </target>

  <target name="compile.debug" description="Compile src to bin in debug mode">
    <mkdir dir="bin"/>
    <javac srcdir="src:test" destdir="bin" includes="**" 
         debug="on" debuglevel="lines,vars,source" source="1.4">
      <classpath refid="project.class.path"/>
    </javac>
  </target>

  <target name="clean.all" description="Clean all genererated files">
    <delete file="org.cobogw.gwt-${version.num}.zip"/>
    <delete file="org.cobogw.gwt.jar"/>
    <delete file="org.cobogw.gwt.server.jar"/>
    <delete>
      <fileset dir="bin" includes="**/*.class"/>
      <fileset dir="doc/javadoc" includes="**"/>
    </delete>
  </target>

  <target name="clean.build" description="Clean the compiled classes">
    <delete>
      <fileset dir="bin" includes="**/*.class"/>
    </delete>
  </target>

  <target name="javadoc" depends="compile" description="Generate Javadoc">
    <javadoc packagenames="org.cobogw.gwt.*" 
      destdir="doc/javadoc"
      author="true"
      version="true"
      use="true">          
      <fileset dir="src" defaultexcludes="yes">
        <include name="org/cobogw/gwt/**/*.java"/>
        <exclude name="org/cobogw/gwt/**/impl/**"/>
      </fileset>
      <tag name="gwt.key" description="GWT i18n key in properties file"/>       
      <tag name="gwt.typeArgs" description="GWT serialization type helper"/>       
      <doctitle><![CDATA[<h1>ORG.COBOGW.GWT package</h1>]]></doctitle>
      <bottom><![CDATA[<i>Copyright &#169; 2007 Hilbrand Bouwkamp. All Rights Reserved.</i>]]></bottom>    
      <classpath refid="project.class.path"/>
    </javadoc>
  </target>
  
  <target name="package" depends="clean.build, compile.debug"
      description="Package up the project as a jar">
    <jar destfile="org.cobogw.gwt.jar">
      <fileset dir="bin">
        <include name="**/*.class"/>
      </fileset>
      <!-- Get everything; source, modules, html files -->
      <fileset dir="src">
        <include name="**"/>
      </fileset>
      <fileset dir="test">
        <include name="**"/>     
      </fileset>
    </jar>
  </target>

  <target name="package.server" depends="clean.build, compile"
      description="Package up all files needed on the server">
    <delete file="org.cobogw.gwt.server.jar"/>
    <jar destfile="org.cobogw.gwt.server.jar">
      <fileset dir="bin">
        <include name="**/*Service.class"/>
      </fileset>
    </jar>
  </target>

  <target name="zip" depends="clean.all, package.server, package, javadoc" 
    description="Put jar, source and javadoc in zip file">
    <zip destfile="org.cobogw.gwt-${version.num}.zip">
      <zipfileset dir="src/" prefix="src/" />
      <zipfileset dir="doc/" prefix="doc/" />
      <fileset file="COPYING" />
      <fileset file="org.cobogw.gwt.jar" />
      <fileset file="org.cobogw.gwt.server.jar" />
    </zip>
  </target>

  <target name="all" depends="package.server, package, javadoc"/>

</project>
